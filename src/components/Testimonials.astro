---
import { markdown } from '@astropub/md';
import { info } from '../data/info';
---

<section id="testimonials" class="mb-10">
  <h2 class="font-bold text-2xl">Testimonials</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 py-4">
    {
      info.recommendations.map(async recommendation => {
        return (
          <div class="rounded shadow-xl min-h-max p-3 hover:shadow-2xl transition-shadow duration-300">
            {await markdown(
              `<p class="text-sm text-gray-800 italic">
                ${recommendation.description}
              </p>`
            )}

            <div class="flex items-center mt-4">
              <img
                src={recommendation.avatar}
                alt={recommendation.name}
                class="w-12 h-12 rounded-full mr-4"
              />
              <div>
                <p class="text-gray-800 text-sm font-semibold">
                  {recommendation.name}
                </p>
                <p class="text-gray-500 text-sm">{recommendation.headline}</p>
              </div>
            </div>
          </div>
        );
      })
    }
  </div>
</section>
