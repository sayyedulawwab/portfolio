---
import { info } from "../data/info";

import SkillItem from "./SkillItem.astro";

const skills = info.skills;
---

<section id="skills">
  <h2 class="font-bold text-2xl">Tools & Technologies I Can Use</h2>
  <div class="md:flex md:justify-between">
    <div class="py-4">
      <h3 class="font-semibold">Languages</h3>
      <ul>
        {skills.languages.map((skill) => <SkillItem skill={skill} />)}
      </ul>
    </div>
    <div class="py-4">
      <h3 class="font-semibold">Frameworks, Platforms & Libraries</h3>
      <ul>
        {skills.frameworks.map((skill) => <SkillItem skill={skill} />)}
      </ul>
    </div>

    <div class="py-4">
      <h3 class="font-semibold">Tools</h3>
      <ul>
        {skills.tools.map((skill) => <SkillItem skill={skill} />)}
      </ul>
    </div>
  </div>
</section>
