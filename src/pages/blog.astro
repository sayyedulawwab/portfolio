---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
const allPosts = await getCollection('blog');

const title = 'sayyedulawwab | portfolio';
const author = 'Muhammad Sayyedul Awwab';
const description =
  "Software Engineer with 2+ years of hands-on experience and passionate about building scalable, reliable and maintainable systems using .NET Core, Clean Architecture, Domain-Driven Design (DDD), CQRS, Microservices, etc. Eager to excel in the software engineering track, I aspire to evolve into a seasoned Software Architect. Whether you're seeking a skilled software engineer committed to continuous learning and innovation, let's connect. I'm excited to explore how my expertise can contribute to the success of your projects.";
---

<BaseLayout title={title} author={author} description={description}>
  <main class="w-4/5 mx-auto text-lg">
    <h1 class="text-3xl font-bold mb-6">Blog Posts</h1>
    <div class="grid grid-cols-1 gap-6">
      {
        allPosts.map(post => (
          <a href={`/blog/${post.slug}/`} class="text-gray-800">
            <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow">
              <h2 class="text-2xl font-semibold text-gray-800 mb-4">
                {post.data.title}
              </h2>

              <p class="text-gray-600 text-sm">{post.data.publishedOn}</p>
            </div>
          </a>
        ))
      }
    </div>
  </main>
</BaseLayout>
